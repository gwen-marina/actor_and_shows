<%= form_with url: "/tvshows/#{@tv_show.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, value: @tv_show.name %>

  <%= form.label :on_air %>
  <%= form.text_field :on_air, value: @tv_show.on_air %>

  <%= form.label :number_of_episodes %>
  <%= form.text_field :number_of_episodes, value: @tv_show.number_of_episodes %>

  <%= form.submit "Update TV Show" %>
<% end %>