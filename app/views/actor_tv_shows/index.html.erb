<h1>TV Shows</h1>
<p><%= link_to 'Sort TV Shows By Alphabetical Order', "/actors/#{@actor.id}/tvshows?alpha=yes" %></p>
<h3><%= @actor.name %></h3>
<p><%= link_to 'Create TV Show', "/actors/#{@actor.id}/tvshows/new" %></p>
<% @tv_shows.each do |show| %>
  <h3><%= show.name %></h3>
  <p>On Air: <%= show.on_air %></p>
  <p>Number of Episodes: <%= show.number_of_episodes %></p>
  <p><%= link_to "Edit #{show.name}", "/tvshows/#{show.id}/edit", id: "show-#{show.id}" %> </p>
  <p><%= link_to "Delete #{show.name}", "/tvshows/#{show.id}", id: "show-#{show.id}", method: :delete %></p> 
<% end %>





